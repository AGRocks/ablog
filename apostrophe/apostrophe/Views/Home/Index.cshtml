<h2>APOSTROPHE!</h2>

<div class="row" ng-app="apostApp" ng-view ng-controller="postsController">
    <div class="row" ng-repeat="item in posts">
        <div>
            <hr />
            <div class="col-md-8">
                <h2>{{item.name}}</h2>
                <div class="col-md-6">{{item.text}}</div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/Scripts/lib/angular/angular.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/app/app.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/app/services/postsService.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/app/controllers/postsController.js")"></script>